<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				android:id="@+id/btm_bar"
				android:background="@color/white"
				android:layout_alignParentBottom="true"
				android:elevation="2dp"
				android:visibility="visible">

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/back_text"
						android:text="Back"
						android:textAppearance="@style/TextAppearance.AppCompat.Small"
						android:textColor="@color/black"
						android:drawableLeft="@drawable/ic_back_left"
						android:drawableStart="@drawable/ic_back_left"
						android:layout_centerVertical="true"
						android:gravity="center"
						android:layout_marginLeft="16dp"
						android:layout_marginStart="16dp"
						android:layout_alignParentLeft="true"
						android:layout_alignParentStart="true"/>

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/next_text"
						android:text="Next"
						android:drawableRight="@drawable/ic_next_right"
						android:drawableEnd="@drawable/ic_next_right"
						android:textAppearance="@style/TextAppearance.AppCompat.Small"
						android:textColor="@color/black"
						android:layout_centerVertical="true"
						android:gravity="center"
						android:layout_marginRight="16dp"
						android:layout_marginEnd="16dp"
						android:layout_alignParentEnd="true"
						android:layout_alignParentRight="true"/>

				<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/page_indicator_1"
						android:src="@drawable/ic_page_indicator_inactive"
						android:layout_centerInParent="true"/>

				<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/page_indicator_2"
						android:src="@drawable/ic_page_indicator_inactive"
						android:layout_centerVertical="true"
						android:layout_toLeftOf="@+id/page_indicator_1"
						android:layout_toStartOf="@+id/page_indicator_1" />

				<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/page_indicator_3"
						android:src="@drawable/ic_page_indicator_inactive"
						android:layout_centerVertical="true"
						android:layout_toRightOf="@+id/page_indicator_1"
						android:layout_toEndOf="@+id/page_indicator_1"/>

		</RelativeLayout>

</RelativeLayout>